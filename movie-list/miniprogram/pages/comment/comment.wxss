.movie-box {
  height: 300rpx;
  display: flex;
  padding: 10rpx;
  border-bottom: 1px solid #ccc;
}

.movie-img {
  width: 250rpx;
  height: 100%;
  margin-right: 20rpx;
}

.movie-info {
  flex: 1;
}

.movie-title {
  color: #666;
  font-size: 40rpx;
  font-weight: bolder;
}

.movie-rate-title {
  margin-top: 20rpx;
}

.movie-rate {
  color: #faaf00;
}

.img-list{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
